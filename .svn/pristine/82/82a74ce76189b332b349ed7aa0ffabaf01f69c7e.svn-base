package com.yuji.uav.comm.mav;

import com.MAVLink.Messages.MAVLinkMessage;

/**
 * This is the interface to be used by client's for mavlink communication via the serial port
 *
 * @author Philip L. Giacalone
 */
public interface IMAVLinkPortal {

    /**
     * This method is used to received messages from the UAV.
     * @param messageFromUav
     */
    public void receive(DownlinkMessage messageFromUav);

    /**
     * This method is used to send MAVLinkMessages to the UAV
     * @param messageToUav
     * @throws MAVLinkSerialPortException if there is a problem with the connection
     */
    public void send(UplinkMessage messageToUav) throws MAVLinkSerialPortException;

}
